<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="97dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="17dp"
    android:layout_marginTop="22dp">
<androidx.cardview.widget.CardView
    android:id="@+id/layout"
    android:layout_width="90dp"
    android:layout_height="90dp"
    app:cardCornerRadius="50dp"
    app:cardElevation="0dp"
    android:background="@color/colorMedium">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMediumDarker">
    </View>
    <androidx.cardview.widget.CardView
        android:layout_width="84dp"
        android:layout_gravity="center"
        app:cardCornerRadius="42dp"
        app:cardElevation="0dp"
        android:layout_height="84dp">
    <View
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary">
    </View>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="75dp"
        android:layout_gravity="center"
        app:cardCornerRadius="38dp"
        app:cardElevation="0dp"
        android:layout_height="75dp">
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:id="@+id/artist_image"
        android:background="@drawable/image_placeholder">
    </ImageView>
    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout">
        <TextView
            android:id="@+id/artist_name2"
            android:layout_width="match_parent"
            android:layout_height="14sp"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/myriadpro"
            android:text="@string/artist"/>
        <TextView
            android:id="@+id/followers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_below="@id/artist_name2"
            android:textColor="@color/colorLightGrey"
            android:text="@string/followersString"/>
    </RelativeLayout>
</RelativeLayout>